# lineakd configuration file
#
# example key configuration:
# 	play	= "xmms --play-pause"
# 	eject	= EAK_EJECT
#
# available special actions:
# 	EAK_EJECT
# 	EAK_VOLUP
# 	EAK_VOLDOWN
# 	EAK_MUTE
# 	EAK_SLEEP
#

# LinEAK Configuration for Natural (User Defined)
# (generated by lineakconfig)

# Global settings
KeyboardType		= USRsMN
CdromDevice		= /dev/sr0
MixerDevice		= /dev/mixer
# Use the xosd display plugin.
Display_plugin = xosd
Display_font = -bitstream-charter-black-r-normal-*-*-240-*-*-p-*-iso8859-1
Display_color = 0aff00
Display_timeout = 3
Display_pos = bottom
Display_align = center
Display_hoffset = 0
Display_voffset = 50
Display_soffset = 1


# Specific keys of your keyboard
#Sleep          = "dcop kdesktop KScreensaverIface lock"
Sleep           = "EAK_SCREEN_LOCK(KDE)"
Internet        = "kstart --desktop 4 kdevelop"
Mail            = "kstart --desktop 2 kmail" # Hello
Search          = "kstart --currentdesktop konqueror " #Hello
Go              = "kstart --desktop 1 konqueror about:blank"
Mute            = "EAK_MUTE"
VolumeDown      = "EAK_VOLDOWN(2,/dev/mixer)"
VolumeUp        = "EAK_VOLUP(2,/dev/mixer)"
Play            = "kstart --desktop 6 /usr/bin/xmms -p"
Pause           = "kstart --desktop 6 /usr/bin/xmms -u"
#Play|Pause     = "kstart --desktop 6 /usr/bin/xmms -t"
Stop            = "kstart --desktop 6 /usr/bin/xmms -s"
Previous        = "kstart --desktop 6 /usr/bin/xmms -r"
Next            = "kstart --desktop 6 /usr/bin/xmms -f"
VendorHome      = "kstart --desktop 1 konqueror http://lycadican.sourceforge.net"

# end lineakd.conf

# Possible uses for KDE, they require xml rpc enabled
#Favourites	= "dcop `dcop konqueror*` 'qt/konqueror-mainwindow#2/unnamed3(KActionCollection, 0x8466aa8)/add_bookmark' activate"
#Forward	= "dcop `dcop konqueror*` 'qt/KXMLGUILClient-KActionCollection/forward' activate"
#Home		= "dcop `dcop konqueror*` 'qt/KXMLGUILClient-KActionCollection/home' activate"
#Refresh	= "dcop `dcop konqueror*` 'qt/KXMLGUILClient-KActionCollection/reload' activate"
#WebStop	= "dcop `dcop konqueror*` 'qt/KXMLGUILClient-KActionCollection/stop' activate"

# end lineakd.conf
